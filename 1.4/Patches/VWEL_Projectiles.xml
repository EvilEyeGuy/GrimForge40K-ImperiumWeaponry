<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Weapons Expanded - Laser</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
	
		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="GF40K_LaserSniperBullet"]</xpath>
			<value>		
				<ThingDef ParentName="VWEL_Bullet_LaserGeneric" Class="VanillaWeaponsExpandedLaser.LaserBeamDef">
					<defName>GF40K_LaserSniperBullet</defName>
					<label>laser sniper shot</label>
					<textures>
						<li>Things/Projectile/Shot_LaserSniperRifle</li>
					</textures>
					<seam>0.3</seam>
					<causefireChance>0</causefireChance>
					<beamWidth>2</beamWidth>
					<lifetime>180</lifetime>
					<projectile>
						<damageDef>Burn</damageDef>
						<damageAmountBase>30</damageAmountBase>
						<armorPenetrationBase>0.8</armorPenetrationBase>
						<stoppingPower>2.5</stoppingPower>
					</projectile>
				</ThingDef>
			</value>
		 </li>
	
		<li Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>		
				<ThingDef ParentName="VWEL_Bullet_LaserGeneric" Class="VanillaWeaponsExpandedLaser.LaserBeamDef">
					<defName>GF40K_LaserGunBulletVWEL</defName>
					<label>laser gun shot</label>
					<textures>
						<li>Things/Projectile/Shot_LaserPistol</li>
					</textures>
					<seam>0.0</seam>
					<causefireChance>0</causefireChance>
					<beamWidth>1.2</beamWidth>
					<projectile>
						<damageDef>Burn</damageDef>
						<damageAmountBase>14</damageAmountBase>
						<armorPenetrationBase>0.82</armorPenetrationBase>
						<stoppingPower>1.2</stoppingPower>
					</projectile>
				</ThingDef>
			</value>
		 </li>
	
		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="GF40K_LaserPistol"]/verbs/li[1]/defaultProjectile</xpath>
			<value>		
				<defaultProjectile>GF40K_LaserGunBulletVWEL</defaultProjectile>
			</value>
		 </li>

      </operations>
    </match>
  </Operation>

</Patch>
