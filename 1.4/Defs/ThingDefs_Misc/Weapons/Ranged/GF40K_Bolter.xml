<Defs>
	<ThingDef Name="GF40K_BaseRangedBolt" ParentName="BaseHumanMakeableGun" Abstract="True">
		<techLevel>Ultra</techLevel>
		<tradeNeverStack>true</tradeNeverStack>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<researchPrerequisites>
				<li>GF40K_RegularRangedBolter</li>
			</researchPrerequisites>
		</recipeMaker>
        <soundInteract>Interact_Rifle</soundInteract>
		<smeltable>false</smeltable>
		<burnableByRecipe>true</burnableByRecipe>
		<notifyMapRemoved>true</notifyMapRemoved>
        <tradeTags>
            <li>GF40K_RangedBolter</li>
			<li>GF40K_ImperiumRanged</li>
        </tradeTags>
        <weaponTags>
            <li>ImperiumRanged</li>
        </weaponTags>
	</ThingDef>

    <ThingDef ParentName="GF40K_BaseRangedBolt">
        <defName>GF40K_BoltPistol</defName>
        <label>bolt pistol</label>
        <description>PLACEHOLDER</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/Bolter/BoltPistol</texPath>
			<drawSize>1</drawSize>
        </graphicData>
        <soundInteract>Interact_Revolver</soundInteract>
        <statBases>
            <WorkToMake>38000</WorkToMake>
			<MarketValue>3000</MarketValue>
            <Mass>1.5</Mass>
            <AccuracyTouch>0.63</AccuracyTouch>
            <AccuracyShort>0.71</AccuracyShort>
            <AccuracyMedium>0.40</AccuracyMedium>
            <AccuracyLong>0.18</AccuracyLong>
            <RangedWeapon_Cooldown>0.6</RangedWeapon_Cooldown>
        </statBases>
		
		<costList>
			<Plasteel>200</Plasteel>
			<ComponentSpacer>20</ComponentSpacer>
		</costList>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
		  <li>Metallic</li>
		</stuffCategories>
		
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GF40K_075BoltBullet</defaultProjectile>
                <warmupTime>0.8</warmupTime>
                <range>19.9</range>
                <soundCast>Shot_IncendiaryLauncher</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
                <!-- <forcedMissRadius>0.2</forcedMissRadius> -->
				<targetParams>
				  <canTargetLocations>true</canTargetLocations>
				</targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
		
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="issaczhuang.muzzleflash">
				<def>MF_StandardMuzzleFalshTwo</def>
				<drawSize>(1,1)</drawSize>
				<offsets>
					<li>(0.45,0)</li>
				</offsets>
			</li>		
		</modExtensions>
    </ThingDef>
	
