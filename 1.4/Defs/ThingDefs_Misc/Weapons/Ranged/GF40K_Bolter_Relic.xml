			<drawSize>1</drawSize>
        </graphicData>
        <soundInteract>Interact_Revolver</soundInteract>
        <statBases>
            <WorkToMake>169000</WorkToMake>
			<MarketValue>4800</MarketValue>
            <Mass>1.5</Mass>
            <AccuracyTouch>0.94</AccuracyTouch>
