    <ThingDef ParentName="GF40K_BaseRangedBoltRelic">
        <defName>GF40K_BoltGunRelic</defName>
        <label>relic bolt gun</label>
        <description>PLACEHOLDER</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/Relic/Boltgun_relic</texPath>
        </graphicData>
        <statBases>
            <WorkToMake>170000</WorkToMake>
			<MarketValue>4900</MarketValue>
            <Mass>2</Mass>
            <AccuracyTouch>1</AccuracyTouch>
            <AccuracyShort>1</AccuracyShort>
            <AccuracyMedium>0.67</AccuracyMedium>
            <AccuracyLong>0.32</AccuracyLong>
            <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
        </statBases>
		<!--costList>
			<Steel>111</Steel>
			<Plasteel>115</Plasteel>
			<ComponentSpacer>10</ComponentSpacer>
		</costList-->
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GF40K_BolterGunRelicBullet</defaultProjectile>
                <warmupTime>0.9</warmupTime>
                <range>30.9</range>
                <forcedMissRadius>0.2</forcedMissRadius>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <soundCast>Shot_Autopistol</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
				<targetParams>
				  <canTargetLocations>true</canTargetLocations>
				</targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
		
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="issaczhuang.muzzleflash">
				<def>MF_StandardMuzzleFalshThree</def>
				<drawSize>(1.2,1.2)</drawSize>
				<offsets>
					<li>(0.48,0.1)</li>
				</offsets>
			</li>		
		</modExtensions>
    </ThingDef>
	
