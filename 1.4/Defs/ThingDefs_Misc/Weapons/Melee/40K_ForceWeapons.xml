<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- WARCASCET MELEE BASE -->

	<ThingDef Name="GF40K_BaseMeleePersona_Force" ParentName="BasePsychicWeaponMelee" Abstract="True">
		<thingClass>VFECore.ThingWithFloorGraphic</thingClass>
		<techLevel>Ultra</techLevel>
		<tradeNeverStack>true</tradeNeverStack>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<!-- <relicChance>3</relicChance> -->
		<recipeMaker>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<smeltable>false</smeltable>
		<burnableByRecipe>true</burnableByRecipe>
		<notifyMapRemoved>true</notifyMapRemoved>
	</ThingDef>

<!-- FORCE MELEE WEAPONS -->
	<!-- Animated Weapons -->
	
	<ThingDef ParentName="GF40K_BaseMeleePersona_Force">
		<defName>GF40K_ForceSword</defName>
		<label>astartes force sword</label>
		<description>An imposing weapon that requires the strength and skill of an Astartes to wield effectively. The Astartes Force Halberd is a versatile weapon capable of delivering devastating stabs and cuts, making it an ideal choice for dealing with heavily-armored foes. The force field generator housed within the halberd's head amplifies the impact of its blows, making it an even deadlier weapon in the hands of a skilled warrior.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/AstartesForceSword</texPath>
			<graphicClass>Graphic_Flicker</graphicClass>
			<drawSize>1.4</drawSize>
		</graphicData>
		<equippedAngleOffset>-90</equippedAngleOffset>
		<statBases>
			<MarketValue>840</MarketValue>
			<WorkToMake>28000</WorkToMake>
			<Mass>50</Mass>
		</statBases>
		<costList>
			<Steel>130</Steel>
		</costList>
		<tools>
			<li>
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>24</power>
				<cooldownTime>2.2</cooldownTime>
				<armorPenetration>0.35</armorPenetration>
			</li>
			<li>
				<label>shaft</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>20</power>
				<cooldownTime>1.8</cooldownTime>
				<armorPenetration>0.5</armorPenetration>
			</li>
		</tools>
		<modExtensions>
			<li Class="VFECore.FloorGraphicExtension">
				<graphicData>
					<graphicClass>Graphic_Single</graphicClass>
					<texPath>Things/Item/Equipment/WeaponMelee/Boxed/AstartesForceSword</texPath>
					<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
					<drawSize>1</drawSize>
				</graphicData>
			</li>
		</modExtensions>
	</ThingDef>




</Defs>