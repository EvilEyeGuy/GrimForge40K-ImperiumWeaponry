			</points>
		</bluntStunChancePerDamagePctOfCorePartToBodyCurve>
		<modExtensions>
			<li Class="VFECore.DamageExtension">
				<pushBackDistance>1</pushBackDistance>
				<soundOnDamage>DropPod_Open</soundOnDamage>
			</li>
		</modExtensions>
	</DamageDef>
	<ManeuverDef>
		<defName>IoM_MaulBlunt</defName>
		<requiredCapacity>IoM_MaulBlunt</requiredCapacity>
		<verb>
			<verbClass>Verb_MeleeAttackDamage</verbClass>
