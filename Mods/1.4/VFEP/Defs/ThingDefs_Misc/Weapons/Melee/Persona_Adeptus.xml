			<texPath>Things/Item/Equipment/WeaponMelee/AstartesChainSword</texPath>
			<drawSize>1.4</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>870</MarketValue>
			<WorkToMake>29000</WorkToMake>
			<Mass>50</Mass>
		</statBases>
